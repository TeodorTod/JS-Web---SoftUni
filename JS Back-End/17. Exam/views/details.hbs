{{#with crypto}}
<section id="details-info">
    <h1>Details</h1>
    <div class="coin-image">
        <img src="{{image}}">
    </div>

    <div class="coin-info">
        <div class="coin-text">
            <h1 id="name">{{name}}</h1>
            <h3 id="payment">Payment method: {{method}}</h3>
            <p id="price"><span>Price: {{price}}</span></p>
            <p id="description">{{description}}</p>
        </div>
        <div class="product-btn">
            
            {{#if hasUser}}
            <div class="author">
                {{#if isOwner}}
                <a href="/edit/{{_id}}" class="btn-edit">Edit</a>
                <a href="/delete/{{_id}}" class="btn-delete">Delete</a>
            </div> 
            {{else}}
            <a href="#" class="btn-buy">Buy</a>
            
            <!-- Logged in user who has already buy this crypto-->
            <p class="buy-message">You already bought these crypto coins.</p>
            {{/if}}
            {{/if}}
        </div>
    </div>
</section>
{{/with}}
